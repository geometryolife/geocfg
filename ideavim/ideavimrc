noremap s <Nop>

nnoremap <Space>w :w<CR>
nnoremap <Space>q :q<CR>
nnoremap S :w<CR>
nnoremap Q :q<CR>
nnoremap si :wq<CR>
nnoremap sc :e ~/.config/ideavim/ideavimrc<CR>

noremap K 5k
noremap J 5j
noremap H 0
noremap L $

inoremap <C-p> <Up>
inoremap <C-n> <Down>
inoremap <C-b> <Left>
inoremap <C-f> <Right>
inoremap <C-a> <Home>
inoremap <C-e> <End>

noremap <C-p> <C-y>
noremap <C-n> <C-e>
noremap <C-M-p> 5<C-y>
noremap <C-M-n> 5<C-n>